seq ::= SEQ LT data_type GT
     | SEQ LT IDENTIFIER GT;

main ::= MAIN LCURL statements RCURL SEMI;

return_ ::= RETURN SEMI
        | RETURN expression SEMI;


dict ::= DICT LT data_type COMMA data_type GT;

